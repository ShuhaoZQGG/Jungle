

<section class="admin-sales-index">

  <header class="page-header">
    <h1>Admin &raquo; Sales</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Sale', [:new, :admin, :sale], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="1">Sales</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Percentage Off</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <%  @sales.each do |sale| %>
          <%= render 'sale', sale: sale%>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
